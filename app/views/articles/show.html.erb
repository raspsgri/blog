<h1 class="display-4"><%= @article.title %></h1>

<p class="lead"><%= @article.body %></p>

<ul class="list-unstyled">
    <li><%= button_to "Edit", edit_article_path(@article), method: :get, class: "btn btn-primary" %></li>
    <br/>
    <li><%= button_to "Delete", article_path(@article), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %></li>
    <br/>
    <%= button_to "Back to Articles", articles_path, method: :get, class: "btn btn-secondary" %>
</ul>

<h2 class="mt-5">Comments</h2>
<%= render @article.comments %>

<h2 class="mt-5">Add a comment:</h2>
<%= render 'comments/form' %>
