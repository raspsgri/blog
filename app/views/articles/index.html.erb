<h1 class="display-4">Articles</h1>

<p class="lead">This blog has <%= Article.public_count %> articles and counting!</p>

<ul class="list-group">
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <li class="list-group-item">
        <%= link_to article.title, article, class: "text-decoration-none" %>
      </li>
    <% end %>
  <% end %>
</ul>

<%= button_to "New Article", new_article_path, method: :get, class: "btn btn-primary mt-3" %>



