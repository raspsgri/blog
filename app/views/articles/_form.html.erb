<%= form_with model: article, class: "form" do |form| %>
  <div class="form-group">
    <%= form.label :title, class: "control-label" %><br>
    <%= form.text_field :title, class: "form-control" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :body, class: "control-label" %><br>
    <%= form.text_area :body, class: "form-control" %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :status, class: "control-label" %><br>
    <%= form.select :status, Visible::VALID_STATUSES, { selected: article.status || 'public' }, class: "form-control" %>
  </div>

  <br/>
  <div class="form-group">
    <%= form.submit "Save", class: "btn btn-primary" %>
    <br/>
    <br/>
    <%= button_to "Back to Articles", articles_path, class: "btn btn-primary" %>
  </div>
<% end %>
