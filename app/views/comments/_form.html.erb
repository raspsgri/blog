<%= form_with model: [ @article, @article.comments.build ], class: "form" do |form| %>
  <div class="form-group">
    <%= form.label :commenter, class: "control-label" %><br>
    <%= form.text_field :commenter, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :body, class: "control-label" %><br>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status, class: "control-label" %><br>
    <%= form.select :status, Visible::VALID_STATUSES, { selected: 'public' }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
